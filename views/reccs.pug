extends layout

block content
  h2 Control Playback on Your Account
  a(href='/playAll')
    p &#9658
  -if(session.seeds){
  h2 Playlist Seeds
  div(class='seedGrid')
    -for(var i=0; i<session.seeds.length; i++){
    div
      label #{session.seeds[i].name}
    -}
  br
  -if(session.reccs){
  div(class='resultGrid')
    h2 Songs
    -var tracks = (session.reccs["tracks"]);
    -tracks.forEach(function(item){
    div(class='gridItem')
      p #{item.name}
      p Artist: #{item["artists"][0].name}
      a(href='/playOne?uri='+ item.uri)
        img(class='albumImg' src=item.album["images"][0].url)
        //p &#9658
    -})
  -}}
